{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "__tests__/sections/sectionIntro.spec.js",
    "__mocks__/skills.js",
    "__mocks__/fileMock.js",
    "__tests__/sections/sectionSkills.spec.js",
    "__tests__/sections/sectionProjectList.spec.js",
    ".next/types/**/*.ts",
    "__tests__/pages/home.spec.js"
  ],
  "exclude": ["node_modules"]
}
